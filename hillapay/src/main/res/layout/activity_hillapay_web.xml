<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/rlMainPage"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription,UseCompoundDrawables,RtlHardcoded,RtlSymmetry,SpUsage,UnusedAttribute"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main"
        android:orientation="vertical"
        tools:context=".activities.selectionportal.SelectionActivity">

        <TextView
            android:textColor="@color/text_font"
            android:layout_marginTop="@dimen/m_27"
            android:id="@+id/txtHeader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/payment"
            android:textSize="@dimen/t_15" />

        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_1"
            android:layout_marginStart="@dimen/m_32"
            android:layout_marginTop="@dimen/m_10"
            android:layout_marginEnd="@dimen/m_32"
            android:background="@color/line" />

        <RelativeLayout android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_font"
                android:id="@+id/txtWebUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/p_36"
                android:paddingTop="@dimen/p_12"
                android:paddingRight="@dimen/p_12"
                android:paddingBottom="@dimen/p_12"
                android:textSize="@dimen/t_12"
                tools:text="url test" />

            <ImageView
                android:layout_marginLeft="@dimen/m_6"
                android:layout_alignParentLeft="true"
                android:id="@+id/imgCertificate"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_width="@dimen/w_24"
                android:layout_height="@dimen/w_24"
                android:src="@drawable/ic_certificate" />
        </RelativeLayout>




        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:id="@+id/llProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgProgress"
            android:layout_width="@dimen/w_48"
            android:layout_height="@dimen/h_48"
            android:src="@drawable/ic_logo" />

        <TextView
            android:textSize="@dimen/progress_text"
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textColor="@color/text_font" />
    </LinearLayout>

</RelativeLayout>