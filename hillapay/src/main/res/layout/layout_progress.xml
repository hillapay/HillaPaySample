<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage,RtlHardcoded,ContentDescription,RtlSymmetry"
    android:background="@android:color/transparent"
    android:gravity="center"
    tools:background="@color/activity_transparent">

    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">


        <ImageView
            android:id="@+id/imgProgress"
            android:layout_width="@dimen/w_48"
            android:layout_height="@dimen/h_48"
            android:src="@drawable/ic_logo" />

        <TextView
            android:textSize="@dimen/progress_text"
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textColor="@color/progress" />
    </LinearLayout>

</RelativeLayout>