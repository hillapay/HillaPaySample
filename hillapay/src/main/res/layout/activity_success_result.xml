<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/transparent"
    android:id="@+id/rlMainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage,RtlHardcoded,ContentDescription,UnusedAttribute,RelativeOverlap,RtlSymmetry"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/llMain"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_activity_success_result"
    android:orientation="vertical"
    tools:context=".activities.selectionportal.SelectionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_8">



        <ImageView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="@dimen/w_48"
            android:layout_height="@dimen/h_48"
            android:src="@drawable/ic_success" />





    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/m_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/success"
        android:text="@string/success"
        android:textSize="@dimen/t_15" />


    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_marginTop="@dimen/m_8"
        android:background="@color/main_top"
        android:layout_marginLeft="@dimen/m_24"
        android:layout_marginRight="@dimen/m_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">





            <RelativeLayout
                android:layout_marginTop="@dimen/m_24"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTerminalLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terminal_name"
                    android:textSize="@dimen/t_14" />



                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTerminalName"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="هیلایی"
                    android:textSize="@dimen/t_14" />


            </RelativeLayout>

            <View
                android:id="@+id/viewLine1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_1"
                android:layout_marginBottom="@dimen/m_8"
                android:layout_marginTop="@dimen/m_8"
                android:background="@color/line_success" />

            <RelativeLayout

                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTerminalNumberLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terminal_number"
                    android:textSize="@dimen/t_14" />



                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTerminalNumber"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10101001"
                    android:textSize="@dimen/t_14" />


            </RelativeLayout>

            <View
                android:id="@+id/viewLine2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_1"
                android:layout_marginBottom="@dimen/m_8"
                android:layout_marginTop="@dimen/m_8"
                android:background="@color/line_success" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtCardLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card"
                    android:textSize="@dimen/t_14" />


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        android:gravity="center"
                        android:id="@+id/imgCard"
                        android:layout_width="@dimen/w_24"
                        android:layout_height="@dimen/h_24"
                        android:layout_marginRight="@dimen/m_4" />

                    <TextView
                        android:textColor="@color/text_font"
                        android:gravity="center"
                        android:id="@+id/txtCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/t_14"
                        tools:text="10101001" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/viewLine3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_1"
                android:layout_marginBottom="@dimen/m_8"
                android:layout_marginTop="@dimen/m_8"
                android:background="@color/line_success" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtPriceLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="14sp" />




                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/text_font"
                        android:gravity="center"
                        android:id="@+id/txtPricePostfix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/m_4"
                        android:text="@string/rial"
                        android:textSize="@dimen/t_14" />

                    <TextView
                        android:textColor="@color/text_font"
                        android:gravity="center"
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/t_14"
                        tools:text="10101001" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/viewLine4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_1"
                android:layout_marginBottom="@dimen/m_8"
                android:layout_marginTop="@dimen/m_8"
                android:background="@color/line_success" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTransactionLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction"
                    android:textSize="@dimen/t_14" />




                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtTransaction"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10101001"
                    android:textSize="@dimen/t_14" />


            </RelativeLayout>

            <View
                android:id="@+id/viewLine5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_1"
                android:layout_marginBottom="@dimen/m_8"
                android:layout_marginTop="@dimen/m_8"
                android:background="@color/line_success" />

            <RelativeLayout
                android:layout_marginBottom="@dimen/m_24"
                android:layout_marginLeft="@dimen/m_16"
                android:layout_marginRight="@dimen/m_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtBankPortNumberLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_port_number"
                    android:textSize="@dimen/t_14" />



                <TextView
                    android:textColor="@color/text_font"
                    android:id="@+id/txtBankPortNumber"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10101001"
                    android:textSize="@dimen/t_14" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBackBtn"
        android:layout_marginLeft="@dimen/m_24"
        android:layout_marginRight="@dimen/m_24"
        android:layout_marginTop="@dimen/m_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBtnSuccess"
            android:gravity="center"
            android:scaleType="fitXY"
            android:layout_alignLeft="@+id/llBtnSuccess"
            android:layout_alignTop="@+id/llBtnSuccess"
            android:layout_alignRight="@+id/llBtnSuccess"
            android:layout_alignBottom="@+id/llBtnSuccess"
            android:src="@drawable/bg_success"
            android:layout_width="@dimen/w_0"
            android:layout_height="@dimen/h_0"/>

        <LinearLayout
            android:id="@+id/llBtnSuccess"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBtnSuccess"
                android:padding="@dimen/p_4"
                android:textSize="@dimen/t_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_font"
                android:text="@string/back"
                />
            <!--            <ImageView-->
            <!--                android:visibility="gone"-->
            <!--                android:layout_marginLeft="16dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:src="@drawable/ic_download" />-->

        </LinearLayout>

    </RelativeLayout>





</LinearLayout>

</RelativeLayout>